<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', resource: @category %>
      <%= form_with(model: @category, class: 'shadow p-3 mb-3 bg-white rounded-lg') do |form| %>
        <div class="form-group row mt-3">
          <%= form.label :name, 'Category Name', class: 'col-2 col-form-label' %>
          <div class="col-10">
            <%= form.text_field :name, class: 'form-control shadow rounded-lg', placeholder: 'Enter a category name' %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= link_to 'Cancel', categories_path, class: 'btn btn-danger btn-lg rounded-pill text-center' %>
          <%= form.submit class: 'btn btn-primary btn-lg rounded-pill ml-1' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
