<h1 class="text-center mt-4 mb-4">Categories</h1>

<div class="apple_pagination mb-4">
  <%= will_paginate @categories, :container => false %>
</div>
<div class="container">
  <% @categories.each do |category| %>
    <div class="row justify-content-center">
      <div class="col-4 mb-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to category.name, category_path(category), class: 'text-success' %></h5>
            <small class="card-text font-size-2"><%= pluralize(category.articles.count, 'article') %></small>
            <% if logged_in? && current_user.admin? %>
              <div class="mt-2">
                <%= link_to 'Edit', edit_category_path(category), class: "btn btn-outline-info rounded-pill" %>
                <%= link_to 'Destroy', category, class: "btn btn-outline-danger rounded-pill", method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <% if category.created_at == category.updated_at %>
              <small><%= "Created #{time_ago_in_words(category.created_at)} ago." %></small>
            <% else %>
              <small><%= "Created #{time_ago_in_words(category.created_at)} ago, Updated #{time_ago_in_words(category.updated_at)} ago" %></small>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="apple_pagination mb-4">
  <%= will_paginate @categories, :container => false %>
</div>