<h1 class="text-center mt-4">Login</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: 'shadow p-3 mb-3 bg-white rounded-lg') do |form| %>
        <div class="form-group row">
          <%= form.label :email, class: 'col-2 col-form-label' %>
          <div class="col-10">
            <%= form.email_field :email, class: 'form-control shadow rounded-lg', placeholder: 'Enter your email address' %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :password, class: 'col-2 col-form-label' %>
          <div class="col-10">
            <%= form.password_field :password, class: 'form-control shadow rounded-lg', placeholder: 'Enter your password' %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= form.submit 'Login', class: 'btn btn-primary btn-lg rounded-pill ml-1 mt-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
