<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', resource: @user %>
      <%= form_with(model: @user, class: 'shadow p-3 mb-3 bg-white rounded-lg') do |form| %>
        <div class="form-group row mt-3">
          <%= form.label :username, class: 'col-2 col-form-label' %>
          <div class="col-10">
            <%= form.text_field :username, class: 'form-control shadow rounded-lg', placeholder: 'Enter a username' %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :email, class: 'col-2 col-form-label' %>
          <div class="col-10">
            <%= form.email_field :email, class: 'form-control shadow rounded-lg', placeholder: 'Enter your email address' %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :password, class: 'col-2 col-form-label' %>
          <div class="col-10">
            <%= form.password_field :password, class: 'form-control shadow rounded-lg', placeholder: 'Create a password' %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= link_to 'Cancel', @user, class: 'btn btn-danger btn-lg rounded-pill text-center' %>
          <%= form.submit(@user.new_record? ? 'Sign Up' : 'Save', class: 'btn btn-primary btn-lg rounded-pill ml-1') %>
        </div>
      <% end %>
    </div>
  </div>
</div>
