<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', resource: @article %>
      <%= form_with(model: article, class: 'shadow p-3 mb-3 bg-white rounded-lg') do |form| %>
        <div class="form-group row mt-3">
          <%= form.label :title, class: 'col-2 col-form-label' %>
          <div class="col-10">
            <%= form.text_field :title, class: 'form-control shadow rounded-lg', placeholder: 'Title of article' %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :body, class: 'col-2 col-form-label' %>
          <div class="col-10">
            <%= form.text_area :body, rows: 10, class: 'form-control shadow rounded-lg', placeholder: 'Body of article' %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :category, class: 'col-2 col-form-label' %>
          <div class="col-10">
            <%= form.collection_select(:category_ids, Category.all, :id, :name, 
            { prompt: 'Make your selection from the list below (can be empty)' }, { multiple: true, size: 3, class: 'custom-select shadow rounded' }) %>
          </div>
        </div>        
        <div class="form-group row justify-content-center">
          <%= link_to 'Cancel', articles_path, class: 'btn btn-danger btn-lg rounded-pill text-center' %>
          <%= form.submit class: 'btn btn-primary btn-lg rounded-pill ml-1' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
